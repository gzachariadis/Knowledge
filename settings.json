{
  // ** UNCATEGORIZED SETTINGS **

  // Disable Recommended Extensions
  "extensions.ignoreRecommendations": true,

  "workbench.enableExperiments": false,

  "update.showReleaseNotes": false,

  "extensions.autoCheckUpdates": false,

  "npm.fetchOnlinePackageInfo": false,

  // Autosave
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 100,

  "terminal.integrated.enableMultiLinePasteWarning": false,

  // Appearance
  "workbench.colorTheme": "Hack The Box",
  "workbench.productIconTheme": "Tabler",
  "workbench.iconTheme": "vscode-great-icons",

  // Python Specific Settings
  "[python]": {
    // Format it both on "Save" and "Paste"
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,

    // Automatically format code as you type, used for autoindention
    // https://www.youtube.com/watch?v=R-OwkbcJYSE
    "editor.formatOnType": true,

    // ** Required Source Control **
    // Will only format the modifications, not entire file.
    // https://www.youtube.com/watch?v=ilCFoEhTyM0
    "editor.formatOnSaveMode": "modifications",

    // Setting YAPF as the default file formatter for Python
    // https://www.youtube.com/watch?v=raD0uYPE_UU
    "editor.defaultFormatter": "eeyore.yapf",

    // Action to perform when "Save" is triggered
    // https://www.youtube.com/watch?v=Le60qa5GkJQ [REQUIRES ATTENTION]
    "editor.codeActionsOnSave": {
      //
      "source.sortImports": "explicit",

      //
      "source.organizeImports": "always",

      // Based on your LINTER - would always enforce automatic fixes
      // https://www.youtube.com/watch?v=gj11Z9QIfJU
      "source.fixAll": "always"
    }
  },

  // ** GIT **

  // Automatically fetches latest updates from repos
  // https://www.youtube.com/watch?v=Ng5xRtLVGpo
  "git.autofetch": true,

  // Fetch latest updates every 3 minutes
  // https://www.youtube.com/watch?v=1U24-ZiZvts
  "git.autofetchPeriod": 180,

  // ** TELEMETRY **
  "telemetry.telemetryLevel": "off",

  // ** FILES **

  // Prompt to save unsaved files on program exit.
  // https://www.youtube.com/watch?v=XL5cSqJlVVc
  "files.hotExit": "onExit",

  // ** EDITOR **

  // Setting Default Formatter for Visual Code Studio - Prettier
  // https://www.youtube.com/watch?v=raD0uYPE_UU
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Disables Automatic Indentation Detecting
  // https://www.youtube.com/watch?v=vGsXNImZz4A
  "editor.detectIndentation": false,

  // Do not insert Spaces when tab is pressed
  // Enforces that tab = add tab  and space = add space.
  // Ignored if editor.detectIndentation is on.
  "editor.insertSpaces": false,

  // The number of spaces a tab is equal to, GLOBALLY.
  // Set for each language specifically to overwrite.
  // Ignored if editor.detectIndentation is on.
  "editor.tabSize": 2,

  // Format files on "Save"
  // https://www.youtube.com/watch?v=zJ8EjUqx1hg
  "editor.formatOnSave": true,

  // Formatting files as I type
  // [TODOOOOOOOOOOOOOOOOOOOO]
  // https://www.youtube.com/watch?v=6n-WMrSlCFw
  // https://www.youtube.com/watch?v=m-3Symq2-V8
  "editor.formatOnType": true,

  // Render whitespaces only at the end of line
  "editor.renderWhitespace": "trailing",

  // Disable Drag and Drop Selection inside Editor
  // https://www.youtube.com/watch?v=dJiZ1Rv2s5I
  "editor.dragAndDrop": false,

  // Copying without a selection, defaults to current cursor line
  // https://www.youtube.com/watch?v=NAokkP8jJkU
  "editor.emptySelectionClipboard": true,

  // Mouse Wheel Zoom - Enable
  // https://www.youtube.com/watch?v=zdGMsWudiWE
  "editor.mouseWheelZoom": true,

  // Mouse Wheel Scroll Sensitivity (Default - 1.0)
  // https://www.youtube.com/watch?v=7Kz2zlK8Iok
  "editor.mouseWheelScrollSensitivity": 0.4,

  // Scrolling while holding Alt - multiplies scroll speed x5
  // Useful because my scrolling speed is very low intentionally.
  // https://www.youtube.com/watch?v=keOO910u9UI
  "editor.fastScrollSensitivity": 5,

  // Decides when to autoclose brackets ([],{})
  // https://www.youtube.com/watch?v=VICsBFsJT1s
  "editor.autoClosingBrackets": "beforeWhitespace",

  // Decides when to autoclose Quotes ("",'')
  // https://www.youtube.com/watch?v=l5lFt4YFdcg
  "editor.autoClosingQuotes": "beforeWhitespace",

  // Type over a closing parenthesis only if automatically generated
  // https://www.youtube.com/watch?v=SucNhPsTWH0
  "editor.autoClosingOvertype": "auto",

  // Controls whether to auto adjust indentation when type,paste or move lines.
  // https://www.youtube.com/watch?v=I1W7ExCYBz4
  "editor.autoIndent": "full",

  // Automatically surround selections
  // https://www.youtube.com/watch?v=fpnPLCyqsKQ
  "editor.autoSurround": "languageDefined",

  // When Searching, don't jump to matches unless triggered.
  // https://www.youtube.com/watch?v=gnyWgbogJwk
  "editor.find.cursorMoveOnType": false,

  // Disable Ligatures
  // https://www.youtube.com/watch?v=Hi1IBwpm_Ls
  // https://www.youtube.com/watch?v=dJvX-Pb92BQ
  "editor.fontLigatures": false,

  // Don't disable line numbers.
  // https://www.youtube.com/watch?v=-yk_Bi4wSTQ
  "editor.lineNumbers": "off",

  // Controls if the UI should run in a mode where it is optimized for screen readers.
  // Screen readers are software programs that allow blind or visually impaired users
  // to read text on a screen using devices like speech synthesizer or braille display.
  // https://www.youtube.com/watch?v=Z779xMbSszg
  "editor.accessibilitySupport": "off",

  // Render vertical lines in the editor at one or more character columns.
  // https://www.youtube.com/watch?v=8HCoN1jBG6Y
  "editor.rulers": [],

  // Color based on properties - keywords, comments, variables, numbers, strings, functions etc. etc.
  // https://www.youtube.com/watch?v=7DlZHZF7P3U
  // https://www.youtube.com/watch?v=0iW-mp7qwwA
  "editor.tokenColorCustomizations": {
    "comments": "#ffffff"
  },

  // Color based on semantics - keywords, methods, variables, numbers etc. etc.
  // https://www.youtube.com/watch?v=vthJRp8jPkw
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "method": "#ff0000"
    }
  },

  // Hides the Horizontal (Down) Scrollbar from the Editor
  // https://www.youtube.com/watch?v=xt-Jp8a7mXI
  "editor.scrollbar.horizontal": "hidden",

  // Hides the Vertical (Side) Scrollbar from the Editor
  // https://www.youtube.com/watch?v=xt-Jp8a7mXI
  "editor.scrollbar.vertical": "hidden",

  // Disables horizontal bracket pair guides.
  // https://www.youtube.com/watch?v=4UXlkUo-emY
  "editor.guides.bracketPairsHorizontal": false,

  // Disable highlighting of active bracket pair
  "editor.guides.highlightActiveBracketPair": false,

  // Enable bracket colorization
  // https://www.youtube.com/watch?v=4UXlkUo-emY
  "editor.bracketPairColorization.enabled": true,

  // Wrap words after 120 characters
  // https://www.youtube.com/watch?v=3SNUxn1Cn1o
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,

  // Sets cursor render animation to "Phase"
  // https://www.youtube.com/watch?v=Hms3gUBKaVQ
  // https://www.youtube.com/watch?v=q1wAnW_yFDU
  "editor.cursorBlinking": "smooth",

  // Enable Smooth Cursor Animation
  // https://www.youtube.com/watch?v=FCUi_dRU0tY
  // https://www.youtube.com/watch?v=c-6AzCZ6mjw
  "editor.cursorSmoothCaretAnimation": "on",

  // Make scrolling slower but "smoother"
  // https://www.youtube.com/watch?v=W0xr0cuFfG4
  "editor.smoothScrolling": true,

  // Cursor Style
  // https://www.youtube.com/watch?v=Nki8tVQ82_8
  "editor.cursorStyle": "underline",

  // Works only when "cursorStyle" is set to "line"
  // https://www.youtube.com/watch?v=-S-clq9jvyk
  "editor.cursorWidth": 2,

  // Move the window up or down when the cursor is exactly X lines from the top/bottom
  // https://www.youtube.com/watch?v=PQAuhE6bBEc
  "editor.cursorSurroundingLines": 30,

  // Decided when "cursor surrouding lines" policy should be enforced
  // Default = don't move view with cursor , but move with keyboard
  // All = move with both - All causes view to move when you click (not wanted)
  // All also causes text to be selected as you move to a different view - bug
  "editor.cursorSurroundingLinesStyle": "default",

  // Disables Minimap
  // https://www.youtube.com/watch?v=rujmKS0XrzU
  "editor.minimap.enabled": false,

  // Limits the minimap width
  // https://www.youtube.com/watch?v=S6WT8bFsnKE
  "editor.minimap.maxColumn": 0,

  // Disable rendering characters
  // https://www.youtube.com/watch?v=f1TTFWJKWKc
  "editor.minimap.renderCharacters": false,

  // ** WORKBENCH **

  "workbench.tree.renderIndentGuides": "always",

  // Opening a fie from quick open, will open it in Preview mode.
  // https://www.youtube.com/watch?v=yLsnGyh7nL8
  "workbench.editor.enablePreviewFromQuickOpen": true,

  // Disable Preview Mode
  // https://www.youtube.com/shorts/d_2I3gDofCA
  "workbench.editor.enablePreview": false,

  // WorkDouble Click to Open Files
  // https://www.youtube.com/shorts/d_2I3gDofCA
  "workbench.list.openMode": "doubleClick",

  // Workbench > Layout Control: Enabled - Disable layout control button
  // https://www.youtube.com/watch?v=Tqt2Q1Mteqg
  // https://stackoverflow.com/questions/71725819/how-to-remove-layout-button-in-the-vscode-titlebar
  "workbench.layoutControl.enabled": false,

  // Toggle Layout Control
  "workbench.layoutControl.type": "toggles",

  // Show Sidebar on the Right
  "workbench.sideBar.location": "right",

  // Show Nothing on App Startup.
  "workbench.startupEditor": "none",

  // Activity Bar Location - Hidden
  // https://www.youtube.com/watch?v=9ePzP0xvgoY
  // https://www.youtube.com/watch?v=xy9RFJ-NPHc
  "workbench.activityBar.location": "hidden",

  // Apply smooth scrolling to trees and lists
  // https://github.com/microsoft/vscode/issues/99848
  "workbench.list.smoothScrolling": true,

  // Show one tab per Editor
  // https://www.youtube.com/watch?v=BSbYYrN3Zzw
  "workbench.editor.showTabs": "single",

  // Set Editor Limit to 1 per group
  // https://www.youtube.com/watch?v=i2iRfgbB2zY
  "workbench.editor.limit.value": 1,

  // Apply Editor Limit on Per Editor Group basis
  // https://www.youtube.com/watch?v=i2iRfgbB2zY
  "workbench.editor.limit.perEditorGroup": true,

  // Enable Editor Limit
  "workbench.editor.limit.enabled": true,

  //  ** WINDOW **

  // Set Vissibility of Menu Bar to Toggle
  // Press ALT to bring focus to the menubar
  // https://www.youtube.com/watch?v=bpXmCdh-FzM
  "window.menuBarVisibility": "toggle",

  // Custom Menu Bar Alt Focus
  "window.customMenuBarAltFocus": false,

  // Disable Window Title to enable Interactive Command Pallet
  // https://www.facebook.com/CSSWeekly/videos/a-quick-overview-of-the-new-command-center-option-available-in-vs-code-v169enabl/730181864769756/
  "window.commandCenter": false,

  // Set the Title of the Window
  "window.title": "${folderName} - ${remoteName}${seperator}${activeEditorShort}",

  // ** FEATURES **

  // ** EXPLORER **

  // Show only current editor in "Open Editors" in Activity Bar [Disabled]
  // https://www.youtube.com/watch?v=OO1ZzNlO8qg
  "explorer.openEditors.visible": 1,

  // Disable Confirmation when Draging and Dropping Files and Folders.
  // https://www.youtube.com/watch?v=M8tnPsKcDRo
  "explorer.confirmDragAndDrop": false,

  // Disable Confirmation when Deleting Files and Folders.
  // https://www.youtube.com/watch?v=2VywHU3iAbU
  "explorer.confirmDelete": false,

  // ** BREADCRUMS **

  // Disable Breadcrums Entirely
  // https://www.youtube.com/watch?v=lajq51wRjGA
  // https://www.youtube.com/watch?v=fHhSw3xDIE4
  "breadcrumbs.enabled": false,

  // Sets whether file paths are to be shown in breadcrumbs
  // https://www.youtube.com/watch?v=-mM-SZsLCK8
  "breadcrumbs.filePath": "off",

  // Disable Breadcrumb icons
  // https://www.youtube.com/watch?v=IlLxU3_Py1Q
  "breadcrumbs.icons": false,

  // Breadcrumbs Individual Visibillity Parameters
  // https://www.youtube.com/watch?v=C3czWbFvwXo
  "breadcrumbs.showFunctions": false,
  "breadcrumbs.showMethods": false,
  "breadcrumbs.showModules": false,
  "breadcrumbs.showConstructors": false,
  "breadcrumbs.showFiles": false,
  "breadcrumbs.showArrays": false,
  "breadcrumbs.showBooleans": false,
  "breadcrumbs.showClasses": false,
  "breadcrumbs.showConstants": false,
  "breadcrumbs.showEnumMembers": false,
  "breadcrumbs.showEvents": false,
  "breadcrumbs.showFields": false,
  "breadcrumbs.showInterfaces": false,
  "breadcrumbs.showKeys": false,
  "breadcrumbs.showNamespaces": false,
  "breadcrumbs.showNull": false,
  "breadcrumbs.showNumbers": false,
  "breadcrumbs.showOperators": false,
  "breadcrumbs.showPackages": false,
  "breadcrumbs.showProperties": false,
  "breadcrumbs.showStrings": false,
  "breadcrumbs.showStructs": false,
  "breadcrumbs.showTypeParameters": false,
  "breadcrumbs.showVariables": false,
  "breadcrumbs.showObjects": false,
  "breadcrumbs.showEnums": false,

  // Disable Symbols in Breadcrumbs
  // https://www.youtube.com/watch?v=i8xwubpXGs0
  "breadcrumbs.symbolPath": "off",

  // Sort Symbols by Name [Disabled]
  // https://www.youtube.com/watch?v=vFky6OmH2fA
  "breadcrumbs.symbolSortOrder": "name",

  // Disable Notebook Breadcrumbs
  "notebook.breadcrumbs.showCodeCells": false,

  // ** OUTLINE **

  // Visibillity Parameters
  "outline.showArrays": false,
  "outline.showBooleans": false,
  "outline.showConstants": false,
  "outline.showConstructors": false,
  "outline.showEnumMembers": false,
  "outline.showEnums": false,
  "outline.showEvents": false,
  "outline.showFiles": false,
  "outline.showInterfaces": false,
  "outline.showKeys": false,
  "outline.showNamespaces": false,
  "outline.showNull": false,
  "outline.showNumbers": false,
  "outline.showObjects": false,
  "outline.showOperators": false,
  "outline.showPackages": false,
  "outline.showProperties": false,
  "outline.showStrings": false,
  "outline.showStructs": false,
  "outline.showTypeParameters": false,
  "outline.showVariables": false,
  "outline.showFields": false,
  "outline.showClasses": false,
  "outline.showModules": false,

  // Disable Errors and Warnings from Outline
  "outline.problems.enabled": false,
  "outline.problems.colors": false,
  "outline.problems.badges": false,

  // ** FORMATTING **

  // YAPF formatter
  "yapf.showNotifications": "always",
  "yapf.importStrategy": "fromEnvironment",

  // ** EXTENSIONS **

  // Discord Extension
  "vscord.app.name": "VSCodium",
  "vscord.status.problems.enabled": false,
  "vscord.app.id": "VSCodium",
  "vscord.status.state.text.editing": "under {workspace} in {Lang}",
  "vscord.status.details.text.editing": "Working on {file_name}",
  "vscord.status.details.text.idle": "Working on {workspace}",
  "vscord.status.image.large.debugging.text": "",
